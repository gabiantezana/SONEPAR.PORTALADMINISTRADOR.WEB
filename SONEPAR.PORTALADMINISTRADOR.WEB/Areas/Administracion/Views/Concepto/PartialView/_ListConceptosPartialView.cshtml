@model IPagedList<SICER.VIEWMODEL.Administracion.Concepto.ConceptoViewModel>
@{
    String campoBuscar = ViewBag.campoBuscar;
}
<table class="table table-hover">
    <thead>
        <tr style="text-align:center; font-weight:bold">
            <td>Nombre</td>
            <td>Descripción</td>
            <td>Cuenta contable</td>
            <td class="text-center">Opciones</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.IdAccount</td>
                <td class="text-nowrap text-center">
                    <a id="btnDeleteMovil.@item.IdConcepto" href="@Url.Action("AddUpdateConcepto", "Concepto", new { Area = "Administracion", idMovil = @item.IdConcepto })"></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.Count == 0)
{

}
<div id="myPager">
    @Html.PagedListPager(Model, page => Url.Action("_ListConceptosPartialView", new { p = page, cadenaBuscar = ViewBag.campoBuscar }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing("lstMovil"))
</div>
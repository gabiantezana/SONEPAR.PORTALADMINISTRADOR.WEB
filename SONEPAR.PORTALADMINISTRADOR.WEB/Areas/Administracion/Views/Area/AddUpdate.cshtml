@model SONEPAR.WEB.VIEWMODEL.Administracion.Area.AreaViewModel
@using SONEPAR.WEB.Areas.Administracion.Controllers
@using SONEPAR.WEB.LOGIC.Administracion
@using SONEPAR.WEB.MODEL
@{
    ViewBag.Title = Model.AreaId.HasValue ? "Editar área" : "Crear área";
    ViewBag.Icon = Model.AreaId.HasValue ? "edit" : "plus";
    var isEdit = Model.AreaId.HasValue ? "true" : "false";
}
@using (Html.BeginForm("AddUpdate", "Area", FormMethod.Post))
{
    @section Breadcrumbs{
        <li><a href="@Url.Action("List", "Area")">Listado de áreas</a></li>

    }

    <div class="panel-footer text-right">
        <button class="btn btn-primary" id="btnGuardar"><i class="fa fa-save" aria-hidden="true"></i>&nbsp; Guardar</button>
    </div>
        <div class="panel">
            <div class="panel-heading">
                <h5 class="panel-title">Datos generales</h5>
            </div>
            @if (Model.AreaId.HasValue)
            {
                @Html.HiddenFor(x => Model.AreaId)
            }
            <div class="panel-body">
                @Html.EditorFor(x => Model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="panel-footer text-right">
            <a class="btn btn-default animsition-link pull-left" href="@Url.Action("List", "Area", new { area = SONEPAR.WEB.HELPER.ConstantHelper.Area.ADMINISTRACION })"><i class="fa fa-arrow-left"></i> Atrás</a>
            <button class="btn btn-primary" id="btnGuardar"><i class="fa fa-save" aria-hidden="true"></i>&nbsp; Guardar</button>
        </div>
}

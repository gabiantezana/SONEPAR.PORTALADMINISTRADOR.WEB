@model List<SICER.MODEL.SAPMetodoPago>

@{
    ViewBag.Title = "Listado de métodos de pago";
    ViewBag.Icon = "list";

}

<div class="panel">
    <div class="panel-body">
        <br />
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <td>PrcCode</td>
                        <td>PrcName</td>
                        <td>Active</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PayMethCod</td>
                            <td>@item.Descript</td>
                            <td>@item.Active</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

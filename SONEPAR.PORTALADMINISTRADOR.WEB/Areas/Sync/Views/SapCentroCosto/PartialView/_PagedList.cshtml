@model IPagedList<SICER.MODEL.SapCentroCosto>
<table class="table table-hover">
    <thead style="font-weight:bold">
    <tr>
        <td>DimCode</td>
        <td>OcrCode</td>
        <td>OcrName</td>
        <td>Locked<</td>
    </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr><td style="font-style: italic" colspan="7">@ConstantHelper.MENSAJE_TABLA_VACIA</td></tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DimCode</td>
                <td>@item.OcrCode</td>
                <td>@item.OcrName</td>
                <td>@item.Locked</td>
            </tr>
        }
    </tbody>
</table>
<div id="myPager">
    @Html.PagedListPager(Model, page => Url.Action("_PagedList",
        new
        {
            page = page,
            //MODEL PROPERTIES HERE:
            filter = ViewBag.Filter,
        }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing("partialList"))
</div>
